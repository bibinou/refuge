.span12.form

  = form_for @member, :html => {:multipart => true, :id=>'edit_member'} do |f|

    .span3
      .avatar
        = image_tag @member.avatar.thumb('180x180').url

    .span8
      #mail_password_editor
        .well
          %a{:href=>'#edit_account', :data=>{'toggle'=>'modal'}, :id=>'mail_me'}
            = t('edit_my_login_informations')

      %h1= f.text_field :first_name
      %h2= f.text_field :last_name

      #baseline= f.text_field :baseline, :style=>'width:570px;'
      #description
        %input{:type=>'text', :id=>'member_birthday_day', :name=>'member[birthday][day]', :style=>'width:20px;', :maxlength=>'2', :value=>@member.birthday.day, :data=>{'required'=>'true', 'alert'=>t('warnings.member_birthday_day')}}
        = select_month(@member.birthday, {:use_month_names=>t('date.month_names').shift}, {:style=>'width:125px;', :name=>'member[birthday][month]'})
        = select_year(@member.birthday,  {:start_year => 1930, :end_year => Time.now.year}, {:style=>'width:80px;margin-right:30px;', :name=>'member[birthday][year]'})
        = t('status')
        = f.select(:status_id, Status.all.map{|l|[l.name,l.id]})

      = f.file_field :avatar

    .clear

    .span2.labels
      .one_row
        %p= t('organisation')
      .one_row
        %p= t('prestations')
      .one_row
        %p= t('references')
      .one_row
        %p= t('phone')
      .one_row
        %p= t('city')
      .two_rows
        %p= t('hobbies')
      .two_rows
        %p= t('powers')
    .span8
      .well
        .one_row
          = f.text_field :organisation, :style=>'margin-right:20px;'
          = t('website')
          = f.text_field :website
        .one_row
          = f.text_field :prestations, :style=>'width:570px;'
        .one_row
          = f.text_field :references, :style=>'width:570px;'
        .one_row
          = f.text_field :phone
        .one_row
          = f.text_field :city
        .two_rows
          = f.text_area :hobbies
        .two_rows
          = f.text_area :powers

        .hr{:style=>'margin:10px auto 30px auto'}

        .social_networks#pro
          %h4= t(:pro_social_networks)
          %br
          - @pro_networks.each do |network|
            %label= t(network[:label])
            = image_tag network[:icon]
            = text_field_tag "profile[#{network[:id]}]", network[:url]

        .social_networks#perso
          %h4= t(:perso_social_networks)
          %br
          - @perso_networks.each do |network|
            %label= t(network[:label])
            = image_tag network[:icon]
            = text_field_tag "profile[#{network[:id]}]", network[:url]

        .clear

    .span11
      = submit_tag t(:save), :class=>'btn  btn-warning', :style=>'float:right; margin-right:20px;'

      - if is_admin
        %a{:href=>member_path(@member.user.id), :class=>'btn btn-danger destroy', :style=>'float:left;', :data=>{'method'=>'delete', 'confirm'=>t('confirms.delete_member')}}
          %i.icon-trash.icon-white
          = t(:delete_member)


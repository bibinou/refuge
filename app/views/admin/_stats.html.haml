#global_conf.well
  %table#stats
    %tr
      %th{:style=>'width:300px;'}= t('name')
      %th{:style=>'width:30px;'}= t('cx')
      %th{:style=>'width:300px;'}= t('last_sign_in')

    - @users.each do |user|
      %tr
        %td= link_to "#{user.member.first_name} #{user.member.last_name}", member_path(user.member.id)
        %td= user.sign_in_count
        %td= l(user.last_sign_in_at) if user.last_sign_in_at

